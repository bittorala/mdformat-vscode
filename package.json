{
  "name": "mdformat",
  "displayName": "mdformat",
  "description": "Unofficial VS Code extension for mdformat Markdown formatter",
  "version": "0.1.1",
  "publisher": "bittorala",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters"
  ],
  "icon": "./icon.png",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "mdformat",
      "properties": {
        "mdformat.pythonPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to the Python interpreter to use for mdformat. If null, uses the interpreter selected in VS Code.",
          "scope": "resource"
        },
        "mdformat.wrap": {
          "type": [
            "string",
            "integer"
          ],
          "default": "keep",
          "description": "How to wrap text. Can be 'keep', 'no', or an integer (e.g., 88).",
          "enum": [
            "keep",
            "no"
          ],
          "scope": "resource"
        },
        "mdformat.endOfLine": {
          "type": "string",
          "default": "keep",
          "description": "End of line character.",
          "enum": [
            "keep",
            "lf",
            "crlf"
          ],
          "scope": "resource"
        },
        "mdformat.noValidate": {
          "type": "boolean",
          "default": false,
          "description": "Disable validation. Allows formatting even if inconsistent HTML outputs are detected.",
          "scope": "resource"
        },
        "mdformat.args": {
          "type": "array",
          "default": [],
          "description": "Custom arguments to pass to mdformat. Use this for plugins or options not directly supported by the extension.",
          "items": {
            "type": "string"
          },
          "scope": "resource"
        }
      }
    },
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "Markdown"
        ],
        "extensions": [
          ".md",
          ".markdown"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.57.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "prettier": "3.5.3",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.34.1"
  },
  "repository": {
    "url": "https://github.com/bittorala/mdformat-vscode/"
  }
}
